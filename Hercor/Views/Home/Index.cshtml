@model IEnumerable<Hercor.Models.Product>
@{
    ViewBag.Title = "Bienvenidos";
}


	<section id="home">
		<div class="home-pattern"></div>
		<div id="main-carousel" class="carousel slide" data-ride="carousel"> 
			<ol class="carousel-indicators">
				<li data-target="#main-carousel" data-slide-to="0" class="active"></li>
				<li data-target="#main-carousel" data-slide-to="1"></li>
			</ol><!--/.carousel-indicators--> 
			<div class="carousel-inner">
				
				@foreach (var item in ViewBag.data)
                {
                    if (item.BannerId == 1)
                    {
                        <div class="item active" style="background-image: url(../Content/images/banner/@item.Image)">
                            <div class="carousel-caption">
                                <div>
                                    <h2 class="heading animated bounceInDown">@item.Title</h2>
                                    <p class="animated bounceInUp">@item.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="item" style="background-image: url(../Content/images/banner/@item.Image)">
                            <div class="carousel-caption">
                                <div>
                                    <h2 class="heading animated bounceInDown">@item.Title</h2>
                                    <p class="animated bounceInUp">@item.Description </p>
                                </div>
                            </div>
                        </div>
                    }

                }
			@*<div class="item" style="background-image: url(../Content/images/slider/constro-bg-1.jpg)"> 
				<div class="carousel-caption"> 
					<div> 
						<h2 class="heading animated bounceInRight">Fully Responsive Template</h2> 
						<p class="animated bounceInLeft">100% Responsive HTML template</p>
					</div> 
				</div> 
			</div>*@
		</div><!--/.carousel-inner-->

		<a class="carousel-left member-carousel-control hidden-xs" href="#main-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
		<a class="carousel-right member-carousel-control hidden-xs" href="#main-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
	</div> 

</section><!--/#home-->

<section id="about-us">
	<div class="container">
		<div class="text-center">
			<div class="col-sm-8 col-sm-offset-2">
				<h2 class="title-one">NOSOTROS</h2>
			</div>
		</div>
		<div class="about-us">
			<div class="row">
				<div class="col-sm-12">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#about" data-toggle="tab"><i class="fa fa-chain-broken"></i> Misión</a></li>
						<li><a href="#mission" data-toggle="tab"><i class="fa fa-th-large"></i> Visión</a></li>
						<li><a href="#community" data-toggle="tab"><i class="fa fa-users"></i> Historia</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane fade in active" id="about">
							<div class="media">
								<div class="media-body">
                                    @foreach (var info in ViewBag.Information)
                                    {
                                        @Html.Raw(@info.Mission)
                                    }
								</div>
							</div>
						</div>
						<div class="tab-pane fade" id="mission">
							<div class="media">
								<div class="media-body">
                                    @foreach (var info in ViewBag.Information)
                                    {
                                        @Html.Raw(@info.Vision)
                                    }
								</div>
							</div>
						</div>
						<div class="tab-pane fade" id="community">
							<div class="media">
								<div class="media-body">
                                    @foreach (var info in ViewBag.Information)
                                    {
                                        @Html.Raw(@info.History)
                                    }
								</div>
							</div>
						</div>
					</div>
				</div>
				</div>
			</div>
		</div>
	</section><!--/#about-us-->

					<section id="blog">
    <div class="container">
        <div class="row text-center clearfix">
            <div class="col-sm-8 col-sm-offset-2">
                <h2 class="title-one">PRODUCTOS</h2>
                <p class="blog-heading">Conozca todos nuestros productos.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.Eliminate == true && item.Page == 0)
                {
                    <div class="col-sm-4">
                        <div class="single-blog">
                            @if (item.Image != null)
                            {
                                <img src="~/Content/images/product/@item.Image" alt="" />
                            }
                            else
                            {
                                <img src="~/Content/images/blog/1.jpg" alt="" />
                            }
                            <h2>@item.Title</h2>
                            @*<ul class="post-meta">
                                    <li><i class="fa fa-pencil-square-o"></i><strong> Posted By:</strong> John</li>
                                    <li><i class="fa fa-clock-o"></i><strong> Posted On:</strong> Apr 15 2014</li>
                                </ul>*@
                            <div class="blog-content">
                                <p>@item.Description</p>
                            </div>
                            <a href="" id="read" class="btn btn-primary" data-toggle="modal" data-target="#blog-seven">Mas Informacion</a>
                        </div>
                        <div class="modal fade" id="blog-seven" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <script type="text/jscript">
                                            $('#read').click(function () {
                                                var url = "/Products/Detalle/";
                                                var id = "@item.ProductId";
                                                var res = url.concat(id);
                                                $.get(res, null, function (data) {
                                                    $("#rData").html(data);
                                                });
                                            })
                                        </script>
                                        <p id="rData"></p>
                                        @Html.Raw(item.Content)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section> <!--/#blog-->

						