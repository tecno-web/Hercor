@model IEnumerable<Hercor.Models.Product>
@{
    ViewBag.Title = "Bienvenidos";
}


	<section id="home">
		<div class="home-pattern"></div>
		<div id="main-carousel" class="carousel slide" data-ride="carousel"> 
			<ol class="carousel-indicators">
				<li data-target="#main-carousel" data-slide-to="0" class="active"></li>
				<li data-target="#main-carousel" data-slide-to="1"></li>
			</ol><!--/.carousel-indicators--> 
			<div class="carousel-inner">
				
				@foreach (var item in ViewBag.data)
                {
                    if (item.BannerId == 1)
                    {
                        <div class="item active" style="background-image: url(~/Content/images/slider/@item.Image)">
                            <div class="carousel-caption">
                                <div>
                                    <h2 class="heading animated bounceInDown">@item.Title</h2>
                                    <p class="animated bounceInUp">@item.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="item" style="background-image: url(~/Content/images/slider/@item.Image)">
                            <div class="carousel-caption">
                                <div>
                                    <h2 class="heading animated bounceInDown">@item.Title</h2>
                                    <p class="animated bounceInUp">@item.Description </p>
                                </div>
                            </div>
                        </div>
                    }

                }
			@*<div class="item" style="background-image: url(../Content/images/slider/constro-bg-1.jpg)"> 
				<div class="carousel-caption"> 
					<div> 
						<h2 class="heading animated bounceInRight">Fully Responsive Template</h2> 
						<p class="animated bounceInLeft">100% Responsive HTML template</p>
					</div> 
				</div> 
			</div>*@
		</div><!--/.carousel-inner-->

		<a class="carousel-left member-carousel-control hidden-xs" href="#main-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
		<a class="carousel-right member-carousel-control hidden-xs" href="#main-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
	</div> 

</section><!--/#home-->

